<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.vincentderidder.flymiles.SettingsFragment"
    android:background="#ffffffff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Settings"
        android:id="@+id/txtSettings"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Distance Unit"
        android:id="@+id/txtDist"
        android:layout_marginLeft="5dp"
        android:textSize="25dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/txtSettings"
        android:layout_alignStart="@+id/txtSettings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Map Type"
        android:id="@+id/textView"
        android:layout_marginLeft="5dp"
        android:textSize="25dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/txtDist"
        android:layout_alignStart="@+id/txtSettings"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How to use"
        android:id="@+id/textView2"
        android:textSize="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Type an address in the blue bar to add a location"
        android:id="@+id/textView3"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Touch and hold a location to move it"
        android:id="@+id/textView4"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Swipe to delete a location"
        android:id="@+id/textView5"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete All Locations"
        android:id="@+id/btnDelete"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="#ffdbdbdb"
        android:padding="10dp"
        android:shadowColor="#00ffffff"
        android:singleLine="true"
        android:layout_marginTop="25dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spUnit"
        android:entries="@array/unit_options"
        android:layout_alignTop="@+id/txtDist"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txtDist"
        android:layout_above="@+id/textView" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spMap"
        android:entries="@array/map_options"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/spUnit"
        android:layout_above="@+id/textView2" />

</RelativeLayout>
